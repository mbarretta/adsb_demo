{
  "index_patterns": [
    "flight_tracks-*"
  ],
  "settings": {
    "index": {
      "number_of_shards": 1,
      "number_of_replicas": 1,
      "lifecycle.name": "flight_tracks",
      "lifecycle.rollover_alias": "flight_tracks"
    }
  },
  "mappings": {
    "properties": {
      "icao": {
        "type": "keyword"
      },
      "landed": {
        "type": "boolean"
      },
      "departureAirport": {
        "type": "keyword"
      },
      "arrivalAirport": {
        "type": "keyword"
      },
      "firstSeen": {
        "type": "long"
      },
      "lastSeen": {
        "type": "long"
      },
      "flightTimeMin": {
        "type": "integer"
      },
      "track": {
        "type": "geo_shape"
      },
      "lastUpdate": {
        "type": "date",
        "format": "epoch_millis"
      }
    }
  }
}